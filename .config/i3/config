# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"



set $bg-colorW            #FFFFFF
set $bd-colorW            #FFFFFF
set $inactive-bg-colorW   #383C4A
set $inactive-bd-colorW   #383C4A
set $text-colorW          #f3f4f5
set $inactive-text-colorW #676E7D
#                           border          background        text                 indicator  child border
client.focused              $bd-colorW       $bg-colorW       $text-colorW          $bd-colorW  $bd-colorW
client.unfocused            $bg-colorW       $bg-colorW       $inactive-text-colorW $bg-colorW  $bg-colorW
client.focused_inactive     $bg-colorW       $bg-colorW       $inactive-text-colorW $bg-colorW  $bg-colorW
client.urgent               $bg-colorW       $bg-colorW       $text-colorW          $bg-colorW  $bg-colorW

# i3 status bar setup
set $bg-color 	         #222222
set $inactive-bg-color   #111111
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

bar {
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
	colors {
	    background  $bg-color
	    separator   #757575
	    #                  border             background         text
	    focused_workspace  $bg-color          $bg-color          $text-color
	    inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
	    urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
    position top
}


# Sound controls
bindsym XF86AudioMute exec --no-startup-id "amixer set Master toggle ; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer -M set Master 5%- ; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer -M set Master 5%+ ; pkill -RTMIN+1 i3blocks"

bindsym XF86Tools exec --no-startup-id "amixer set Capture toggle ; pkill -RTMIN+1 i3blocks"

# Media player controls
bindsym $mod+l exec --no-startup-id playerctl play-pause
bindsym $mod+k exec --no-startup-id playerctl next
bindsym $mod+j exec --no-startup-id playerctl previous

# Sreen brightness controls
bindsym $mod+p exec --no-startup-id "xbacklight +10 ; pkill -RTMIN+2 i3blocks"
bindsym $mod+o exec --no-startup-id "xbacklight -10 ; pkill -RTMIN+2 i3blocks"


# Lock screen script
bindsym $mod+Shift+Delete exec --no-startup-id "$HOME/scripts/lock.sh $HOME/Pictures/Icons/lock.png"

# Wallpaper
