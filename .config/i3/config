set $mod Mod4
font pango:unifont, Font Awesome 9

floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id termite --class Termite
bindsym $mod+BackSpace exec --no-startup-id termite --class FTermite
bindsym $mod+Shift+Return split h; exec --no-startup-id termite; split v

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id rofi -font "System San Francisco Display 10" -show run

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1; workspace 1
bindsym $mod+Shift+2 move container to workspace 2; workspace 2
bindsym $mod+Shift+3 move container to workspace 3; workspace 3
bindsym $mod+Shift+4 move container to workspace 4; workspace 4
bindsym $mod+Shift+5 move container to workspace 5; workspace 5
bindsym $mod+Shift+6 move container to workspace 6; workspace 6
bindsym $mod+Shift+7 move container to workspace 7; workspace 7
bindsym $mod+Shift+8 move container to workspace 8; workspace 8
bindsym $mod+Shift+9 move container to workspace 9; workspace 9
bindsym $mod+Shift+0 move container to workspace 10; workspace 10

bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

set $bg-colorW            #FFFFFF
set $bd-colorW            #FFFFFF
set $inactive-bg-colorW   #383C4A
set $inactive-bd-colorW   #383C4A
set $text-colorW          #f3f4f5
set $inactive-text-colorW #676E7D
#                           border          background        text                 indicator  child border
client.focused              $bd-colorW       $bg-colorW       $text-colorW          $bd-colorW  $bd-colorW
client.unfocused            $bg-colorW       $bg-colorW       $inactive-text-colorW $bg-colorW  $bg-colorW
client.focused_inactive     $bg-colorW       $bg-colorW       $inactive-text-colorW $bg-colorW  $bg-colorW
client.urgent               $bg-colorW       $bg-colorW       $text-colorW          $bg-colorW  $bg-colorW

# i3 status bar setup
set $transparent         #22222299
set $bg-color 	         #1a1a1a99
set $inactive-bg-color   #33333399
set $text-color          #EEEEEE
set $inactive-text-color #AAAAAA
set $urgent-bg-color     #994444

bar {
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    tray_padding 0
    tray_output eDP1
    tray_output LVDS-0
    i3bar_command i3bar -t
    position top
    height 26
	colors {
        statusline #FFFFFF
	    background  $transparent
	    separator   #979797
	    #                  border             background         text
	    focused_workspace  $transparent          $bg-color          $text-color
	    inactive_workspace $transparent        $inactive-bg-color $inactive-text-color
	    urgent_workspace   $transparent        $urgent-bg-color   $text-color
	}
}


# Sound controls
bindsym XF86AudioMute exec --no-startup-id "amixer set Master toggle ; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer -M set Master 5%- ; pkill -RTMIN+1 i3blocks"
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer -M set Master 5%+ ; pkill -RTMIN+1 i3blocks"

bindsym XF86Tools exec --no-startup-id "amixer set Capture toggle ; pkill -RTMIN+1 i3blocks"

# Media player controls
bindsym $mod+l exec --no-startup-id playerctl play-pause
bindsym $mod+k exec --no-startup-id playerctl next
bindsym $mod+j exec --no-startup-id playerctl previous

# Sreen brightness controls
bindsym $mod+p exec --no-startup-id "xbacklight +10 ; pkill -RTMIN+2 i3blocks"
bindsym $mod+o exec --no-startup-id "xbacklight -10 ; pkill -RTMIN+2 i3blocks"


# Lock screen script
#bindsym $mod+Shift+Delete exec --no-startup-id "$HOME/scripts/lock.sh /usr/local/bin/icons/tokendark.png"
bindsym $mod+Shift+Delete exec --no-startup-id ~/scripts/lock2.sh


# Wallpaper
#exec_always --no-startup-id feh --bg-scale ~/Wallpapers/Wall12.jpeg

#exec_always --no-startup-id ~/scripts/Wallpaper.sh +1
set $wall $(~/scripts/currWallpaper.sh)
exec_always --no-startup-id feh --bg-scale $wall

# Default window setup
for_window [class=".*"] border pixel 0
hide_edge_borders both
gaps inner 20
#gaps inner 20
gaps outer 0
#gaps outer 20
new_window pixel 1

for_window [class="FTermite"] border pixel 1, floating enable
for_window [class="Termite"] border pixel 1
for_window [title="Calendar"] floating enable; #resize shrink width 10000px; resize grow width 100px; resize shrink height 10000px; resize grow height 200px;
for_window [title="Thunar"] floating enable; #resize shrink width 10000px; resize grow width 100px; resize shrink height 10000px; resize grow height 200px;

assign [class="Chromium"] 2
assign [class="Slack"] 4
assign [class="Spotify"] 5

# Screen compositers
exec --no-startup-id compton -f --config ~/.config/compton.cfg
exec --no-startup-id redshift
exec --no-startup-id twmnd

# Resize windows
bindsym $mod+Ctrl+Down  resize grow   height 1 px or 1 ppt
bindsym $mod+Ctrl+Up    resize shrink height 1 px or 1 ppt
bindsym $mod+Ctrl+Left  resize shrink width  1 px or 1 ppt
bindsym $mod+Ctrl+Right resize grow   width  1 px or 1 ppt

# Change the gaps of windows
bindsym $mod+Mod1+Right gaps inner all plus  5
bindsym $mod+Mod1+Left  gaps inner all minus 5
bindsym $mod+Mod1+Up    gaps outer all plus  5
bindsym $mod+Mod1+Down  gaps outer all minus 5
bindsym $mod+Mod1+0     gaps inner all set   0; gaps outer all set 0; border pixel 0

# Client shortcuts
bindsym $mod+Shift+c exec --no-startup-id chromium
bindsym $mod+Shift+f exec --no-startup-id firefox-nightly
bindsym $mod+Shift+s exec --no-startup-id spotify --class Spotify
bindsym $mod+Shift+a exec slack --class Slack
bindsym $mod+Shift+g exec --no-start-up gimp

# Keyboard script when plugged in
bindsym $mod+Shift+Prior exec --no-startup-id ~/scripts/keyboard.sh

# nm-applet
bindsym $mod+u exec --no-startup-id nm-applet
bindsym $mod+y exec --no-startup-id killall nm-applet

# Take a screenshot
bindsym $mod+Shift+plus exec --no-startup-id ~/scripts/screenshot.sh

# Work startup script
bindsym $mod+Shift+i exec --no-startup-id ~/scripts/chrom  --class Chromium; exec --no-startup-id slack --class Slack; exec termite

# Cycle Wallpaper
bindsym $mod+w exec --no-startup-id ~/scripts/Wallpaper.sh +1; exec --no-startup-id feh --bg-scale $wall
bindsym $mod+Shift+w exec --no-startup-id ~/scripts/Wallpaper.sh -1; exec --no-startup-id feh --bg-scale $wall

